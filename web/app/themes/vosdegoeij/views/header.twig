<header class="banner navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="{{site.url}}">{{site.title}}</a>
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">{{ __('Toggle navigation', 'vosdegoeij') }}</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    {% if main_menu.get_items %}
      <nav id="main-nav" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
        {% for item in main_menu.get_items %}
          <li class="{{item.classes | join(' ')}}"><a href="{{item.get_link | relative}}" title="{{item.title}}">{{item.title}}</a></li>
        {% endfor %}
        </ul> 
      </nav>
    {% endif %}
  </div>
</header>